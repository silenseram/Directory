<Window x:Class="WpfSharp.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSharp"
        mc:Ignorable="d"
        Title="AddWindow" Height="240" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="250"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Button Content="Add" Grid.Column="1" Margin="10 15 0 10" HorizontalAlignment="Left"  Grid.Row="1" VerticalAlignment="Top" Width="100" Height="30" Click="Button_Click"/>
        <Label x:Name="AddLblName" Content="Add" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Grid.Row="0" Grid.Column="0" Height="40" Width="120"/>
        <TextBox Grid.Column="1" x:Name="AddNameTextField" Margin="10 15 0 10" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="120"/>
    </Grid>
</Window>
